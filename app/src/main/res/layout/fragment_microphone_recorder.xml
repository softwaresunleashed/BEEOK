<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unleashed.android.beeokunleashed.ui.fragements.MicrophoneRecorder"
    android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgBtn_MicRec"
        android:src="@drawable/microphone_icon"
        android:background="@drawable/list_item_bg_normal"
        android:layout_gravity="center" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_microphone_recorder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center_horizontal">
    </com.google.android.gms.ads.AdView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_microphone_recorder2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_gravity="bottom|center_horizontal">
    </com.google.android.gms.ads.AdView>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:background="@drawable/progress_bar_round_bg"
        android:visibility="gone" />


</FrameLayout>
