<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unleashed.android.beeokunleashed.ui.fragements.SendPromotionalEmail">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_send_promo_mail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center_horizontal">
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:layout_gravity="center"
        android:src="@drawable/send_promotional_email" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_send_promo_mail2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal">
    </com.google.android.gms.ads.AdView>


</FrameLayout>
